@model List<core.phoneDevice.PhoneModel>
@{
    ViewData["Title"] = "Device List";
}



<div class="row">

    <table class="table table-bordered">
        <caption>
            Device List
            <div class="pull-right">
                @if (User.Identity.IsAuthenticated) {
                    <a asp-area="" asp-controller="Home" asp-action="Refresh" class="btn btn-default"><span class="glyphicon glyphicon-refresh"></span> Refresh</a>

                    <a asp-area="" asp-controller="Home" asp-action="StartRun" class="btn btn-primary"><span class="glyphicon glyphicon-forward"></span> Run All (@ViewBag.task)</a>
                }

            </div>
        </caption>
        <thead>
            <tr>
                <th>No.</th>
                <th>DeviceName</th>
                <th>Model</th>
                <th>Online</th>
                <th>Run</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var m in Model) {
                i++;
                <tr>
                    <td>@i</td>
                    <td>@m.Device</td>
                    <td>@m.Model</td>
                    <td>
                        <span class="glyphicon glyphicon-globe @(m.Online? "online":"")" title="@m.Online"></span>
                    </td>
                    <td>
                        @if (m.IsRun) {
                            <span class="glyphicon glyphicon-play online" title="@m.IsRun"></span>
                        } else {
                            <span class="glyphicon glyphicon-pause" title="@m.IsRun"></span>
                        }
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
