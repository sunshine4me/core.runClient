@model SmokeTestAddModel
<form asp-controller="SmokeTest" asp-action="Add" asp-antiforgery="false" method="post" class="form-horizontal" >
    <div class="modal-header">
        <button type="button" class="close"
                data-dismiss="modal" aria-hidden="true">
            &times;
        </button>
        <h4 class="modal-title">
            Add SmokeTest
        </h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label asp-for="Name" class="col-md-4 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Name" class="form-control"  />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FilePath" class="col-md-4 control-label"></label>
            <div class="col-md-8">
                <input asp-for="FilePath" class="form-control"  />
                <span asp-validation-for="FilePath" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ExecuteScript" class="col-md-4 control-label"></label>
            <div class="col-md-8">
                <textarea asp-for="ExecuteScript" rows="5" class="form-control"></textarea>
                <span asp-validation-for="ExecuteScript" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PassMatch" class="col-md-4 control-label"></label>
            <div class="col-md-8">
                <input asp-for="PassMatch" class="form-control" />
                <span asp-validation-for="PassMatch" class="text-danger"></span>
            </div>
        </div>

        
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
